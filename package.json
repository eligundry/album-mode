{
  "name": "@eligundry/album-mode",
  "description": "Remix application that recommends music",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "build": "npm run partytown && npm run build:remix",
    "build:remix": "remix build",
    "dev": "npm-run-all build --parallel \"dev:*\"",
    "dev:remix": "remix watch",
    "dev:wrangler": "cross-env NODE_ENV=development npm run wrangler",
    "lint": "eslint app/**/*.{ts,tsx}",
    "migration:generate": "drizzle-kit generate:sqlite --out ./migrations --schema ./app/lib/database/schema.server.ts",
    "migration:up": "drizzle-kit up:sqlite",
    "partytown": "partytown copylib public/~partytown",
    "prepare": "husky install",
    "prettier": "prettier .",
    "prettier:fix": "prettier . --write",
    "seed-script": "SEED_SCRIPT=true node --require esbuild-register",
    "start": "cross-env NODE_ENV=production npm run wrangler",
    "test": "vitest",
    "typecheck": "tsc -b",
    "wrangler": "wrangler pages dev ./public --compatibility-date=2023-05-18"
  },
  "dependencies": {
    "@builder.io/partytown": "^0.8.0",
    "@eligundry/server-timing": "^1.0.1",
    "@emailjs/nodejs": "^2.2.0",
    "@growthbook/growthbook": "^0.26.0",
    "@growthbook/growthbook-react": "^0.16.0",
    "@libsql/client": "^0.1.6",
    "@react-hookz/web": "^23.0.0",
    "@remix-run/cloudflare": "^1.17.0",
    "@remix-run/cloudflare-pages": "^1.17.0",
    "@remix-run/css-bundle": "^1.17.0",
    "@remix-run/node": "^1.17.0",
    "@remix-run/react": "^1.17.0",
    "@sentry/remix": "^7.52.1",
    "async-retry": "^1.3.3",
    "axios": "^1.4.0",
    "clsx": "^1.2.1",
    "daisyui": "^3.0.3",
    "date-fns": "^2.30.0",
    "detect-browser": "^5.3.0",
    "drizzle-orm": "^0.25.4",
    "lodash": "^4.17.21",
    "node-cache": "^5.1.2",
    "promise-hash": "^1.3.0",
    "react": "^18.2.0",
    "react-confetti": "^6.1.0",
    "react-dom": "^18.2.0",
    "react-lite-youtube-embed": "^2.3.52",
    "react-portal": "^4.2.2",
    "react-select": "^5.7.3",
    "react-twitter-embed": "^4.0.4",
    "remix-auth": "^3.4.0",
    "remix-auth-spotify": "^1.3.0",
    "remix-utils": "^6.3.0",
    "spotify-web-api-node": "^5.0.2",
    "wikipedia": "^2.0.0",
    "winston": "^3.8.2",
    "winston-transport": "^4.5.0",
    "zod": "^3.21.4",
    "zod-form-data": "^2.0.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.19.0",
    "@remix-run/dev": "^1.17.0",
    "@remix-run/eslint-config": "^1.17.0",
    "@tailwindcss/typography": "^0.5.9",
    "@testing-library/react": "^14.0.0",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/async-retry": "^1.4.5",
    "@types/inquirer": "^9.0.3",
    "@types/jsdom": "^21.1.1",
    "@types/lodash": "^4.14.194",
    "@types/promise-hash": "^1.3.0",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "@types/react-portal": "^4.0.4",
    "@types/spotify-web-api-node": "^5.0.7",
    "@types/yargs": "^17.0.24",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-v8": "^0.32.0",
    "autoprefixer": "^10.4.14",
    "bandcamp-scraper": "^1.5.0",
    "bottleneck": "^2.19.5",
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "drizzle-kit": "^0.17.6",
    "esbuild-register": "^3.4.2",
    "eslint": "^8.40.0",
    "happy-dom": "^9.18.3",
    "husky": "^8.0.3",
    "inquirer": "^9.2.3",
    "jsdom": "^22.0.0",
    "lint-staged": "^13.2.2",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.33.0",
    "postcss": "^8.4.23",
    "prettier": "^2.8.8",
    "string-strip-html": "^13.2.3",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.0.4",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.32.0",
    "vitest-fetch-mock": "^0.2.2",
    "wrangler": "^3.1.0",
    "yargs": "^17.7.2"
  },
  "engines": {
    "node": ">=18"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": true,
    "importOrder": [
      "<THIRD_PARTY_MODULES>",
      "^~/lib/(.*)",
      "^~/(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  },
  "lint-staged": {
    "*": "prettier --write"
  }
}
