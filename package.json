{
  "name": "@eligundry/album-mode",
  "description": "Remix application that recommends music",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && npm run partytown && npm run build:remix",
    "build:css": "tailwindcss -m -i ./styles/app.scss -o app/styles/app.css --postcss postcss.config.js",
    "build:remix": "remix build --sourcemap",
    "dev": "concurrently \"npm run dev:css\" \"npm run dev:netlify\"",
    "dev:css": "tailwindcss -w -i ./styles/app.scss -o app/styles/app.css --postcss postcss.config.js",
    "dev:netlify": "cross-env NODE_ENV=development netlify dev",
    "start:netlify": "cross-env NODE_ENV=production netlify dev",
    "partytown": "partytown copylib public/~partytown",
    "seed-script": "node --require esbuild-register",
    "lint": "eslint app/**/*.{ts,tsx}",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.150.0",
    "@builder.io/partytown": "^0.6.4",
    "@netlify/functions": "^1.2.0",
    "@prisma/client": "^3.12.0",
    "@remix-run/netlify": "^1.6.8",
    "@remix-run/node": "^1.6.8",
    "@remix-run/react": "^1.6.8",
    "@sentry/remix": "^7.11.1",
    "axios": "^0.27.2",
    "clsx": "^1.1.1",
    "daisyui": "^2.24.0",
    "date-fns": "^2.28.0",
    "lodash": "^4.17.21",
    "node-cache": "^5.1.2",
    "promise-hash": "^1.3.0",
    "react": "^18.2.0",
    "react-confetti": "^6.1.0",
    "react-dom": "^18.2.0",
    "react-lite-youtube-embed": "^2.2.2",
    "react-portal": "^4.2.2",
    "react-select": "^5.4.0",
    "react-use": "^17.4.0",
    "spotify-web-api-node": "^5.0.2",
    "react-twitter-embed": "^4.0.4",
    "wikipedia": "^1.1.9"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.6.8",
    "@remix-run/eslint-config": "^1.6.8",
    "@sentry/netlify-build-plugin": "^1.1.1",
    "@tailwindcss/typography": "^0.5.4",
    "@types/jsdom": "^16.2.14",
    "@types/lodash": "^4.14.181",
    "@types/promise-hash": "^1.3.0",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@types/react-portal": "^4.0.4",
    "@types/spotify-web-api-node": "^5.0.7",
    "@types/yargs": "^17.0.10",
    "autoprefixer": "^10.4.4",
    "bandcamp-scraper": "^1.4.1",
    "bottleneck": "^2.19.5",
    "concurrently": "^7.1.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.11.0",
    "jsdom": "^19.0.0",
    "playwright": "^1.21.0",
    "postcss": "^8.4.12",
    "prettier": "^2.6.2",
    "prisma": "^3.12.0",
    "string-strip-html": "^11.1.0",
    "tailwindcss": "^3.1.6",
    "twitter-api-v2": "^1.12.3",
    "typescript": "^4.7.4",
    "yargs": "^17.4.1"
  },
  "engines": {
    "node": ">=16"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": true
  }
}
