{
  "name": "@eligundry/album-mode",
  "description": "Remix application that recommends music",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "packageManager": "pnpm@9.1.0",
  "scripts": {
    "build": "npm run partytown && npm run build:remix",
    "build:remix": "remix vite:build",
    "dev": "remix vite:dev",
    "start": "netlify serve",
    "partytown": "partytown copylib public/~partytown",
    "seed-script": "SEED_SCRIPT=true node --require esbuild-register",
    "lint": "eslint app/**/*.{ts,tsx}",
    "typecheck": "tsc -b",
    "prettier": "prettier .",
    "prettier:fix": "prettier . --write",
    "prepare": "husky install",
    "test": "vitest",
    "migration:generate": "drizzle-kit generate:sqlite --out ./migrations --schema ./app/lib/database/schema.server.ts",
    "migration:up": "drizzle-kit up:sqlite"
  },
  "dependencies": {
    "@builder.io/partytown": "^0.10.2",
    "@eligundry/server-timing": "^1.0.5",
    "@growthbook/growthbook": "^1.1.0",
    "@growthbook/growthbook-react": "^1.1.0",
    "@headlessui/react": "^2.0.4",
    "@libsql/client": "^0.7.0",
    "@netlify/functions": "^2.6.0",
    "@netlify/remix-adapter": "^2.3.1",
    "@radix-ui/react-slot": "^1.0.2",
    "@react-hookz/web": "^23.1.0",
    "@remix-run/node": "^2.9.2",
    "@remix-run/react": "^2.9.2",
    "@remix-run/serve": "^2.9.2",
    "@spotify/web-api-ts-sdk": "^1.2.0",
    "async-retry": "^1.3.3",
    "axios": "^1.4.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "compression": "^1.7.4",
    "daisyui": "^3.1.6",
    "date-fns": "^3.6.0",
    "detect-browser": "^5.3.0",
    "drizzle-orm": "^0.31.2",
    "isbot": "^5.1.14",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "react": "^18.2.0",
    "react-confetti": "^6.1.0",
    "react-dom": "^18.2.0",
    "react-portal": "^4.2.2",
    "react-twitter-embed": "^4.0.4",
    "remix-auth": "^3.7.0",
    "remix-auth-spotify": "^1.3.2",
    "remix-utils": "^7.6.0",
    "resend": "^0.17.2",
    "tailwind-merge": "^2.3.0",
    "uuid": "^10.0.0",
    "wikipedia": "^2.1.0",
    "winston": "^3.10.0",
    "winston-transport": "^4.5.0",
    "zod": "^3.23.8",
    "zod-form-data": "^2.0.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.9.2",
    "@remix-run/eslint-config": "^2.9.2",
    "@tailwindcss/typography": "^0.5.9",
    "@testing-library/react": "^14.0.0",
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@types/async-retry": "^1.4.5",
    "@types/inquirer": "^9.0.3",
    "@types/jsdom": "^21.1.1",
    "@types/lodash": "^4.14.197",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@types/react-portal": "^4.0.4",
    "@types/uuid": "^10.0.0",
    "@types/yargs": "^17.0.24",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^1.6.0",
    "autoprefixer": "^10.4.14",
    "bandcamp-scraper": "^1.5.0",
    "bottleneck": "^2.19.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.19.12",
    "esbuild-register": "^3.4.2",
    "eslint": "^8.47.0",
    "happy-dom": "^10.9.0",
    "husky": "^8.0.3",
    "inquirer": "^9.2.10",
    "jsdom": "^22.1.0",
    "lint-staged": "^13.2.3",
    "netlify-cli": "^17.33.0",
    "playwright": "^1.37.0",
    "postcss": "^8.4.27",
    "prettier": "^3.0.1",
    "string-strip-html": "^13.4.2",
    "tailwindcss": "^3.4.4",
    "tsx": "^4.15.4",
    "typescript": "^5.4.5",
    "vite": "^5.1.0",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^1.6.0",
    "vitest-fetch-mock": "^0.2.2",
    "yargs": "^17.7.2"
  },
  "engines": {
    "node": ">=22"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": true,
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [
      "<THIRD_PARTY_MODULES>",
      "^~/lib/(.*)",
      "^~/(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  },
  "lint-staged": {
    "*": "prettier --write"
  }
}
