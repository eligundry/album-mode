{
  "name": "remix-template-netlify",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "dev": "concurrently \"npm run dev:css\" \"npm run dev:netlify\"",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "dev:netlify": "cross-env NODE_ENV=development netlify dev",
    "start:netlify": "cross-env NODE_ENV=production netlify dev"
  },
  "dependencies": {
    "@netlify/functions": "^0.10.0",
    "@prisma/client": "^3.12.0",
    "@remix-run/netlify": "^1.3.5",
    "@remix-run/node": "^1.3.5",
    "@remix-run/react": "^1.3.5",
    "axios": "^0.26.1",
    "bandcamp-scraper": "^1.4.1",
    "bottleneck": "^2.19.5",
    "clsx": "^1.1.1",
    "cross-env": "^7.0.3",
    "jsdom": "^19.0.0",
    "lodash": "^4.17.21",
    "promise-hash": "^1.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-spotify-embed": "^0.2.3",
    "spotify-web-api-node": "^5.0.2",
    "tailwindcss-classnames": "^3.0.4"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.3.5",
    "@remix-run/eslint-config": "^1.3.5",
    "@types/jsdom": "^16.2.14",
    "@types/lodash": "^4.14.181",
    "@types/promise-hash": "^1.3.0",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/spotify-web-api-node": "^5.0.7",
    "autoprefixer": "^10.4.4",
    "concurrently": "^7.1.0",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.11.0",
    "playwright": "^1.21.0",
    "postcss": "^8.4.12",
    "prettier": "^2.6.2",
    "prisma": "^3.12.0",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": true
  }
}
