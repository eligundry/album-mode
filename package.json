{
  "name": "@eligundry/album-mode",
  "description": "Remix application that recommends music",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "build": "npm run partytown && npm run build:remix",
    "build:remix": "remix build",
    "dev": "npm run dev:netlify",
    "dev:netlify": "cross-env NODE_ENV=development netlify dev",
    "start:netlify": "cross-env NODE_ENV=production netlify dev",
    "partytown": "partytown copylib public/~partytown",
    "seed-script": "SEED_SCRIPT=true node --require esbuild-register",
    "lint": "eslint app/**/*.{ts,tsx}",
    "typecheck": "tsc -b",
    "prettier": "prettier .",
    "prettier:fix": "prettier . --write",
    "prepare": "husky install",
    "test": "vitest",
    "migration:generate": "drizzle-kit generate:sqlite --out ./migrations --schema ./app/lib/database/schema.server.ts",
    "migration:up": "drizzle-kit up:sqlite"
  },
  "dependencies": {
    "@builder.io/partytown": "^0.8.0",
    "@eligundry/server-timing": "^1.0.1",
    "@emailjs/nodejs": "^2.2.0",
    "@growthbook/growthbook": "^0.27.0",
    "@growthbook/growthbook-react": "^0.17.0",
    "@libsql/client": "^0.2.2",
    "@netlify/functions": "^1.6.0",
    "@react-hookz/web": "^23.0.1",
    "@remix-run/netlify": "^1.18.0",
    "@remix-run/node": "^1.18.0",
    "@remix-run/react": "^1.18.0",
    "async-retry": "^1.3.3",
    "axios": "^1.4.0",
    "clsx": "^1.2.1",
    "daisyui": "^3.1.6",
    "date-fns": "^2.30.0",
    "detect-browser": "^5.3.0",
    "drizzle-orm": "^0.27.0",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-confetti": "^6.1.0",
    "react-dom": "^18.2.0",
    "react-portal": "^4.2.2",
    "react-select": "^5.7.3",
    "react-twitter-embed": "^4.0.4",
    "remix-auth": "^3.4.0",
    "remix-auth-spotify": "^1.3.0",
    "remix-utils": "^6.4.1",
    "spotify-web-api-node": "^5.0.2",
    "wikipedia": "^2.1.0",
    "winston": "^3.9.0",
    "winston-transport": "^4.5.0",
    "zod": "^3.21.4",
    "zod-form-data": "^2.0.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.18.0",
    "@remix-run/eslint-config": "^1.18.0",
    "@tailwindcss/typography": "^0.5.9",
    "@testing-library/react": "^14.0.0",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/async-retry": "^1.4.5",
    "@types/inquirer": "^9.0.3",
    "@types/jsdom": "^21.1.1",
    "@types/lodash": "^4.14.195",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@types/react-portal": "^4.0.4",
    "@types/spotify-web-api-node": "^5.0.7",
    "@types/yargs": "^17.0.24",
    "@vitejs/plugin-react": "^4.0.1",
    "@vitest/coverage-v8": "^0.32.2",
    "autoprefixer": "^10.4.14",
    "bandcamp-scraper": "^1.5.0",
    "bottleneck": "^2.19.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.19.2",
    "esbuild-register": "^3.4.2",
    "eslint": "^8.43.0",
    "happy-dom": "^9.20.3",
    "husky": "^8.0.3",
    "inquirer": "^9.2.7",
    "jsdom": "^22.1.0",
    "lint-staged": "^13.2.2",
    "playwright": "^1.35.1",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "string-strip-html": "^13.4.1",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.1.3",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.32.2",
    "vitest-fetch-mock": "^0.2.2",
    "yargs": "^17.7.2"
  },
  "engines": {
    "node": ">=16"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": true,
    "importOrder": [
      "<THIRD_PARTY_MODULES>",
      "^~/lib/(.*)",
      "^~/(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  },
  "lint-staged": {
    "*": "prettier --write"
  }
}
