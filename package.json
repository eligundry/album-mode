{
  "name": "@eligundry/album-mode",
  "description": "Remix application that recommends music",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && npm run partytown && npm run build:remix",
    "build:css": "tailwindcss -m -i ./styles/app.scss -o app/styles/app.css --postcss postcss.config.js",
    "build:remix": "remix build --sourcemap",
    "dev": "concurrently \"npm run dev:css\" \"npm run dev:netlify\"",
    "dev:css": "tailwindcss -w -i ./styles/app.scss -o app/styles/app.css --postcss postcss.config.js",
    "dev:netlify": "cross-env NODE_ENV=development netlify dev",
    "start:netlify": "cross-env NODE_ENV=production netlify dev",
    "partytown": "partytown copylib public/~partytown",
    "seed-script": "SEED_SCRIPT=true node --require esbuild-register",
    "lint": "eslint app/**/*.{ts,tsx}",
    "typecheck": "tsc -b",
    "prettier": "prettier .",
    "prettier:fix": "prettier . --write",
    "prepare": "husky install"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.245.0",
    "@builder.io/partytown": "^0.7.4",
    "@eligundry/server-timing": "^1.0.1",
    "@emailjs/nodejs": "^2.1.1",
    "@netlify/functions": "^1.4.0",
    "@prisma/client": "^4.8.1",
    "@remix-run/netlify": "^1.9.0",
    "@remix-run/node": "^1.9.0",
    "@remix-run/react": "^1.9.0",
    "@sentry/remix": "^7.29.0",
    "async-retry": "^1.3.3",
    "axios": "^1.2.2",
    "clsx": "^1.2.1",
    "daisyui": "^2.46.1",
    "date-fns": "^2.29.3",
    "lodash": "^4.17.21",
    "node-cache": "^5.1.2",
    "promise-hash": "^1.3.0",
    "react": "^18.2.0",
    "react-confetti": "^6.1.0",
    "react-dom": "^18.2.0",
    "react-lite-youtube-embed": "^2.3.52",
    "react-portal": "^4.2.2",
    "react-select": "^5.7.0",
    "react-twitter-embed": "^4.0.4",
    "react-use": "^17.4.0",
    "remix-auth": "^3.4.0",
    "remix-auth-spotify": "^1.2.8",
    "spotify-web-api-node": "^5.0.2",
    "wikipedia": "^2.0.0",
    "winston": "^3.8.2",
    "winston-transport": "^4.5.0",
    "zod": "^3.20.2",
    "zod-form-data": "^1.2.4"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.9.0",
    "@remix-run/eslint-config": "^1.9.0",
    "@sentry/netlify-build-plugin": "^1.1.1",
    "@tailwindcss/typography": "^0.5.8",
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "@types/async-retry": "^1.4.5",
    "@types/jsdom": "^16.2.14",
    "@types/lodash": "^4.14.191",
    "@types/promise-hash": "^1.3.0",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@types/react-portal": "^4.0.4",
    "@types/spotify-web-api-node": "^5.0.7",
    "@types/yargs": "^17.0.19",
    "autoprefixer": "^10.4.13",
    "bandcamp-scraper": "^1.4.1",
    "bottleneck": "^2.19.5",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "esbuild-register": "^3.4.2",
    "eslint": "^8.31.0",
    "husky": "^8.0.3",
    "jsdom": "^19.0.0",
    "lint-staged": "^13.1.0",
    "playwright": "^1.29.1",
    "postcss": "^8.4.20",
    "prettier": "^2.8.1",
    "prettier-plugin-prisma": "^4.8.0",
    "prisma": "^4.8.1",
    "string-strip-html": "^13.0.6",
    "tailwindcss": "^3.2.4",
    "twitter-api-v2": "^1.13.0",
    "typescript": "^4.9.4",
    "yargs": "^17.6.2"
  },
  "engines": {
    "node": ">=16"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": true,
    "importOrder": [
      "<THIRD_PARTY_MODULES>",
      "^~/lib/(.*)",
      "^~/(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  },
  "lint-staged": {
    "*": "prettier --write"
  }
}
